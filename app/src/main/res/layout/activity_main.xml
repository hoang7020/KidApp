<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorToolbar"
        android:elevation="4dp"
        app:title="Cú Cú"
        app:titleTextColor="#ffffff"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ProgressBar
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="11">

            <ImageView
                android:id="@+id/ivResult"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_gravity="center"
                android:layout_weight="6.5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:weightSum="10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnRead1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/speaker"
                    android:text="Read" />

                <TextView
                    android:background="@drawable/border_eng"
                    android:layout_weight="3"
                    android:id="@+id/txtResult1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="English" />

                <TextView
                    android:layout_weight="3"
                    android:id="@+id/txtVietname1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/border_vie"
                    android:text="Vietnamese" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:weightSum="10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnRead2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/speaker"
                    android:text="Read" />

                <TextView
                    android:background="@drawable/border_eng"
                    android:layout_weight="3"
                    android:id="@+id/txtResult2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="English" />



                <TextView
                    android:background="@drawable/border_vie"
                    android:layout_weight="3"
                    android:id="@+id/txtVietname2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Vietnamese" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:weightSum="10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/btnRead3"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:scaleType="fitCenter"
                    android:src="@drawable/speaker"
                    android:text="Read" />

                <TextView
                    android:background="@drawable/border_eng"
                    android:layout_weight="3"
                    android:id="@+id/txtResult3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="English" />

                <TextView
                    android:background="@drawable/border_vie"
                    android:layout_weight="3"
                    android:id="@+id/txtVietname3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Vietnamese" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/btnCamera"
        android:layout_width="70dp"
        android:layout_height="0dp"
    android:layout_gravity="center"
    android:layout_weight="2"
    android:src="@drawable/camera" />

</LinearLayout>